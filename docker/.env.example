# Production Deployment Environment Variables
# Copy this file to .env and update with your production values

# Application
SMARTRAG_VERSION=1.0.0
ENVIRONMENT=production

# Database (PostgreSQL)
DB_PASSWORD=change_me_in_production_use_strong_password
POSTGRES_DB=smartrag
POSTGRES_USER=smartrag

# Redis Cache
REDIS_PASSWORD=change_me_in_production_use_strong_password

# Security
MAX_FILE_SIZE_MB=50
MAX_UPLOAD_SIZE=52428800

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
SMARTRAG_LLM_MODEL=llama3.1:8b
SMARTRAG_EMBEDDING_MODEL=nomic-embed-text

# Logging
LOG_LEVEL=INFO
SMARTRAG_DEBUG=false

# Resource Limits
MEMORY_LIMIT=8G
CPU_LIMIT=4

# SSL/TLS (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Optional: External Services
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_ENABLED=true
