# ============================================================================
# SmartRAG Environment Configuration
# ============================================================================
# Copy this file to .env and customize as needed
# Environment variables override config.yaml settings

# System Configuration
# SMARTRAG_DEBUG=false
# SMARTRAG_LOG_LEVEL=INFO

# Model Configuration
# SMARTRAG_LLM_TYPE=ollama
# SMARTRAG_LLM_MODEL=llama3.1:8b
# SMARTRAG_OLLAMA_HOST=http://localhost:11434
# SMARTRAG_EMBEDDING_MODEL=nomic-embed-text
# SMARTRAG_VISION_MODEL=Salesforce/blip-image-captioning-base

# Vector Store Configuration
# SMARTRAG_VECTOR_STORE_TYPE=chromadb
# SMARTRAG_PERSIST_DIR=./vector_db
# SMARTRAG_COLLECTION_NAME=multimodal_documents

# Processing Configuration
# SMARTRAG_CHUNK_SIZE=1000
# SMARTRAG_CHUNK_OVERLAP=200

# Retrieval Configuration
# SMARTRAG_TOP_K=5
# SMARTRAG_SIMILARITY_THRESHOLD=0.7

# Generation Configuration
# SMARTRAG_TEMPERATURE=0.7
# SMARTRAG_MAX_TOKENS=2048

# ============================================================================
# Example: Using different models
# ============================================================================
# Use Llama 2 instead of Llama 3.1:
# SMARTRAG_LLM_MODEL=llama2:7b

# Use different Ollama host (e.g., remote server):
# SMARTRAG_OLLAMA_HOST=http://192.168.1.100:11434

# Use FAISS instead of ChromaDB:
# SMARTRAG_VECTOR_STORE_TYPE=faiss

# Enable debug mode:
# SMARTRAG_DEBUG=true
# SMARTRAG_LOG_LEVEL=DEBUG
